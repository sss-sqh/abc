    <dependencies>
        <dependency>
            <groupId>com.bos</groupId>
            <artifactId>bos_service</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
